# C.C.R.O.P-PhenoHunt Environment Configuration
# Copy this file to .env and configure with your actual values

# ================================
# GENERAL SETTINGS
# ================================

# Project environment (development, staging, production)
ENVIRONMENT=development

# Random seed for reproducibility (aligned with harmonic 27)
RANDOM_SEED=27

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Output directory for generated files
OUTPUT_DIR=./outputs

# Data directory for datasets
DATA_DIR=./data

# Model checkpoint directory
MODEL_DIR=./models/checkpoints

# ================================
# MACHINE LEARNING SETTINGS
# ================================

# PyTorch device (cpu, cuda, mps)
DEVICE=cpu

# Number of training epochs (aligned with 3-6-9 sequence)
VAE_EPOCHS=369

# Batch size for training (aligned with harmonic numbers)
BATCH_SIZE=27

# Learning rate
LEARNING_RATE=0.001

# VAE beta parameter for KL divergence weight
VAE_BETA=1.0

# Number of latent dimensions (aligned with 27)
LATENT_DIM=27

# Early stopping patience
EARLY_STOPPING_PATIENCE=33

# ================================
# DATA PROCESSING SETTINGS
# ================================

# Number of Monte Carlo samples for uncertainty quantification
MC_SAMPLES=100

# Validation split ratio
VALIDATION_SPLIT=0.2

# Test split ratio
TEST_SPLIT=0.1

# Cross-validation folds
CV_FOLDS=5

# Minimum samples required for training
MIN_SAMPLES=10

# Maximum missing data percentage allowed
MAX_MISSING_PERCENT=0.2

# ================================
# HARMONIC NUMEROLOGY SETTINGS
# ================================

# Sacred geometry alignment
HARMONIC_3=3   # Triadic transformation
HARMONIC_5=5   # 5-stage preprocessing
HARMONIC_7=7   # 7-layer networks
HARMONIC_9=9   # 9-step post-processing
HARMONIC_12=12 # 12-module structure
HARMONIC_27=27 # 27 latent partitions
HARMONIC_33=33 # 33 primary features
HARMONIC_369=369 # Tesla's divine numbers

# ================================
# API AND WEB SCRAPING SETTINGS
# ================================

# Leafly API settings (if available)
LEAFLY_API_KEY=your_api_key_here
LEAFLY_API_URL=https://api.leafly.com/v1

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Maximum retry attempts
MAX_RETRIES=3

# Rate limiting (requests per minute)
RATE_LIMIT=60

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (compatible; PhenoHunter/3.0; +https://github.com/Hosuay/C.C.R.O.P-PhenoHunt)

# ================================
# DATABASE SETTINGS (Future)
# ================================

# Database type (sqlite, postgresql, mongodb)
DB_TYPE=sqlite

# Database file path (for SQLite)
DB_PATH=./data/phenohunter.db

# Database connection string (for PostgreSQL/MongoDB)
DB_CONNECTION_STRING=

# ================================
# VISUALIZATION SETTINGS
# ================================

# Default plot theme (plotly, plotly_white, plotly_dark, seaborn, ggplot2)
PLOT_THEME=plotly

# Figure DPI for high-resolution exports
FIGURE_DPI=300

# Default figure size (width, height in inches)
FIGURE_WIDTH=12
FIGURE_HEIGHT=8

# Color scheme aligned with sacred geometry
# Options: harmonic, scientific, viridis, plasma, rainbow
COLOR_SCHEME=harmonic

# ================================
# DASHBOARD SETTINGS
# ================================

# Dashboard host
DASHBOARD_HOST=0.0.0.0

# Dashboard port
DASHBOARD_PORT=8050

# Enable debug mode for dashboard
DASHBOARD_DEBUG=true

# Dashboard cache timeout (seconds)
DASHBOARD_CACHE_TIMEOUT=3600

# Maximum concurrent users
MAX_CONCURRENT_USERS=10

# ================================
# MOLECULAR VISUALIZATION SETTINGS
# ================================

# RDKit molecule rendering size
MOL_RENDER_SIZE=500

# 3D visualization backend (py3dmol, rdkit, nglview)
MOL_3D_BACKEND=py3dmol

# Molecular structure image format (png, svg, pdf)
MOL_IMAGE_FORMAT=png

# ================================
# CLOUD AND DEPLOYMENT SETTINGS
# ================================

# Enable cloud mode (for Google Colab, AWS, etc.)
CLOUD_MODE=false

# Cloud storage bucket (for saving results)
CLOUD_STORAGE_BUCKET=

# Cloud provider (gcp, aws, azure)
CLOUD_PROVIDER=

# ================================
# SECURITY SETTINGS
# ================================

# Enable authentication for dashboards
ENABLE_AUTH=false

# Secret key for session management
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Enable CORS
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8050

# ================================
# PERFORMANCE SETTINGS
# ================================

# Number of CPU cores to use (0 = auto-detect)
N_JOBS=0

# Enable GPU acceleration if available
ENABLE_GPU=true

# Memory limit for data processing (GB)
MEMORY_LIMIT_GB=8

# Cache directory for intermediate results
CACHE_DIR=./cache

# Enable caching
ENABLE_CACHE=true

# ================================
# EXPERIMENTAL FEATURES
# ================================

# Enable experimental C++ modules
ENABLE_CPP_MODULES=false

# Enable experimental Rust modules
ENABLE_RUST_MODULES=false

# Enable experimental Julia integration
ENABLE_JULIA_INTEGRATION=false

# Enable multi-language bindings
ENABLE_MULTI_LANGUAGE=false

# ================================
# TESTING AND DEVELOPMENT
# ================================

# Enable test mode
TEST_MODE=false

# Generate synthetic data for testing
GENERATE_SYNTHETIC_DATA=false

# Number of synthetic strains to generate
N_SYNTHETIC_STRAINS=100

# Verbose output
VERBOSE=true

# Enable profiling
ENABLE_PROFILING=false

# ================================
# NOTIFICATIONS AND ALERTS
# ================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Email server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@phenohunter.com

# Notification recipients (comma-separated)
NOTIFICATION_RECIPIENTS=

# ================================
# BACKUP AND VERSIONING
# ================================

# Enable automatic backups
ENABLE_AUTO_BACKUP=true

# Backup frequency (hours)
BACKUP_FREQUENCY=24

# Maximum backup versions to keep
MAX_BACKUP_VERSIONS=7

# Backup directory
BACKUP_DIR=./backups

# ================================
# COMPLIANCE AND GOVERNANCE
# ================================

# Data retention policy (days)
DATA_RETENTION_DAYS=365

# Enable audit logging
ENABLE_AUDIT_LOG=true

# Audit log file path
AUDIT_LOG_PATH=./logs/audit.log

# Compliance mode (research, clinical, commercial)
COMPLIANCE_MODE=research

# ================================
# CUSTOM CONFIGURATION
# ================================

# Custom configuration file path
CUSTOM_CONFIG_PATH=./configs/custom_config.yaml

# Feature flags (comma-separated)
FEATURE_FLAGS=

# Experimental flags (comma-separated)
EXPERIMENTAL_FLAGS=

# ================================
# END OF CONFIGURATION
# ================================
